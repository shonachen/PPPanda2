<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pppanda">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/head"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.LoginActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
        </activity>

        <activity android:name=".activity.ForgetPasswordActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
        </activity>

        <activity android:name=".activity.MainActivity"/>

        <activity android:name=".activity.ProtocolActivity"/>

        <activity android:name=".activity.IdentifyActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
        </activity>

        <activity android:name=".activity.MyFamilyActivity"/>

        <activity android:name=".activity.MyPhoneActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
        </activity>

        <activity android:name=".activity.ModifyPasswordActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
        </activity>

        <activity android:name=".activity.AboutUsActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>   //设置了action为call时起作用

</manifest>