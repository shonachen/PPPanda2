<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color">

    <include layout="@layout/title"/>

    <RelativeLayout
        android:id="@+id/old_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:background="#ffffff"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_old_phone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_phone1"/>

        <TextView
            android:id="@+id/tv_old_phone"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_old_phone"
            android:layout_marginLeft="10dp"
            android:text="13899928374"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/et_old_identify"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:hint="请输入验证码"
            android:textColorHint="#A0A0A0"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:inputType="phone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/new_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/old_phone"
        android:background="#ffffff"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/iv_new_phone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_phone2"/>

        <EditText
            android:id="@+id/et_new_phone"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_new_phone"
            android:layout_marginLeft="10dp"
            android:hint="请输入新手机号"
            android:textColorHint="#A0A0A0"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/et_new_identify"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:hint="请输入验证码"
            android:textColorHint="#A0A0A0"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:inputType="phone"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_send_code"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/new_phone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_next"
        android:layout_alignParentRight="true"
        android:text="发送验证码"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_identify_code"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_next"
        android:layout_centerHorizontal="true"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:gravity="center"/>

</RelativeLayout>