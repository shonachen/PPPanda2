<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color">

    <include layout="@layout/title"/>

    <LinearLayout
        android:id="@+id/personal_info_modify_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/iv_personal_info_head"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/head"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/personal_info_modify_nickname"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_personal_info_name_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_personal_info_name_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的昵称"
            android:textColor="#040404"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/iv_personal_info_name_picture"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxEms="6"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_personal_info_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="昵称"
            android:textColor="#808282"
            android:textSize="13sp"
            android:layout_toLeftOf="@+id/iv_personal_info_name_next"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/iv_personal_info_name_next"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/btn_next_n"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_modify_address"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_personal_info_address_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_home"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_personal_info_address_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的小区"
            android:textColor="#040404"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/iv_personal_info_address_picture"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_personal_info_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="锦江区"
            android:textColor="#808282"
            android:textSize="13sp"
            android:layout_toLeftOf="@+id/iv_personal_info_address_next"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/iv_personal_info_address_next"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/btn_next_n"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:layout_marginTop="80dp"
        android:text="退出登录"
        android:textSize="16sp"
        android:textColor="#FF4D24"/>



</LinearLayout>