<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color">

    <include layout="@layout/title"/>

    <RelativeLayout
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#ffffff"
        android:layout_marginTop="2dp">

        <com.pppanda.util.XCRoundImageView
            android:id="@+id/iv_personal_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/head"/>

        <LinearLayout
            android:id="@+id/personal_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_personal_head"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_personal_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/myself_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_personal_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关系"
                android:textColor="#A0A0A0"
                android:textSize="13sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/fragment_background_color"/>

    <Button
        android:id="@+id/btn_checkdata"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_next"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="查看数据"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_agree"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_next"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="同意"
        android:textColor="#ffffff"
        android:textSize="16sp"/>


    <Button
        android:id="@+id/btn_delete"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_delete"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="删除"
        android:textColor="#ff0000"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_disagree"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_delete"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="拒绝"
        android:textColor="#ff0000"
        android:textSize="16sp"/>


</LinearLayout>