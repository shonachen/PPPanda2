<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color">


    <RelativeLayout
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title">

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="首页"
            android:textSize="@dimen/title_text_size"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/iv_home_addfamily"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/people3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_bangding"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/home_title"
        android:background="@mipmap/home_bg">

        <ImageView
            android:id="@+id/iv_home_bangding"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/btn_binding"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_home_bangding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击绑定"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_data"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/home_title"
        android:background="@mipmap/home_bg"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_home_data"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/img_p1"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_home_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/home_score"
            android:layout_marginTop="85dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_home_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_bangding"
        android:layout_marginTop="10dp"
        android:scrollbars="none"/>


</RelativeLayout>