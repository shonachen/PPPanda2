<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_home_info_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_team"/>

    <ImageView
        android:id="@+id/iv_home_info_red"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@mipmap/point_red_home"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="39dp"/>

    <LinearLayout
        android:id="@+id/home_info_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_home_info_head"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_home_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PP熊猫团队"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_home_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎使用PP熊猫，全心为您服务"
            android:textColor="#8a8a8a"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home_info_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017/05/05"
        android:textColor="#8a8a8a"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"/>


</RelativeLayout>