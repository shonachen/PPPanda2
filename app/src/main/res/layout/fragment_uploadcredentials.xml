<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/identify_upload_info"
        android:textColor="#7F8287"
        android:gravity="center"
        android:textSize="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/upload_cardid"
            android:layout_marginLeft="17dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图像正面"
                android:textSize="15dp"
                android:textColor="#22A1EA"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/iv_back_idcard"
                android:layout_width="130dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@mipmap/img_id1"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/upload_cardid"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图像反面"
                android:textSize="15dp"
                android:textColor="#22A1EA"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/iv_forward_idcard"
                android:layout_width="130dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@mipmap/id_back"
                android:scaleType="fitXY"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="205dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:background="@drawable/upload_cardid">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户手持身份证照片"
            android:textColor="#22A1EA"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/iv_hand_idcard"
            android:layout_width="300dp"
            android:layout_height="168dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/id_hand"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>